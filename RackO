import random


class RackO:

    def __init__(self, deck_size=50, hand_size=10, hands_up=False, deck_seq=None):
        # parameters from input
        self.deck_size = deck_size
        self.hand_size = hand_size
        self.hands_up = hands_up
        if deck_seq:
            self.deck = deck_seq
        else:
            self.deck = range(1, deck_size + 1)
            random.shuffle(self.deck)

        # game state initialization
        self.player_turn = 0
        self.num_players = 2
        self.hands = [[] for i in range(self.num_players)]
        self.discard = []

        #start the game
        self.deal_hands()

    def deal_hands(self):
        for i in range(self.num_players):
            for j in range(self.hand_size):
                self.hands[i].append(self.deck.pop())

    def draw_card(self):
        pass

    def discard(self):
        pass

    def check_discard(self):
        pass

    def draw_discard(self):
        pass

    def game_over(self):
        pass


